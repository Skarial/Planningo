<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/page_background"
  android:fillViewport="true">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="28dp"
    android:paddingEnd="20dp"
    android:paddingBottom="24dp">

    <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/main_title"
      android:textColor="@color/text_primary"
      android:textSize="30sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/subtitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:text="@string/main_subtitle"
      android:textColor="@color/text_secondary"
      android:textSize="15sp" />

    <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      app:cardBackgroundColor="@color/card_background"
      app:cardCornerRadius="22dp"
      app:cardElevation="6dp"
      app:strokeColor="@color/card_border"
      app:strokeWidth="1dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
          android:id="@+id/status"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/status_waiting"
          android:textColor="@color/text_secondary"
          android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_permission"
          style="@style/Widget.ReveilPlanninngo.Button.Primary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="18dp"
          android:text="@string/btn_check_permission" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_settings"
          style="@style/Widget.ReveilPlanninngo.Button.Outline"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="@string/btn_open_settings" />

        <com.google.android.material.button.MaterialButton
          android:id="@+id/btn_ringtone"
          style="@style/Widget.ReveilPlanninngo.Button.Outline"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="@string/btn_choose_ringtone" />

        <TextView
          android:id="@+id/ringtone_value"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="@string/ringtone_default_label"
          android:textColor="@color/text_secondary"
          android:textSize="13sp" />

        <TextView
          android:id="@+id/note"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="18dp"
          android:text="@string/main_note"
          android:textColor="@color/text_secondary"
          android:textSize="12sp" />

      </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

  </LinearLayout>
</ScrollView>
